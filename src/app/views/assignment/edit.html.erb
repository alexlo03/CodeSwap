<!DOCTYPE html>

<%= javascript_include_tag 'bootstrap-datepicker-1' %>

<p><%= link_to "Home", root_url %> // <%= link_to "Courses", "/courses" %> // <%= link_to @assignment.course.name, "/course/show/"+ @assignment.course.id.to_s %> // <%= @assignment.name %> </p>

<span id="flash" style="display:none; padding:4px; background-color:#F70; color:#000"></span>

Editing assignment for <%= @course.name %>

<%=render '/assignment/assignment_form' %>

<p class='btn' onClick="assignments.edit.submitAssignment('<%= @assignment.id %>');">Submit</p>

<%= link_to 'Cancel', :back, :class => 'btn' %>

<script type='text/javascript' >
  assignments.edit.pageLoad("<%= raw @assignment.name %>", "<%= @assignment.start_date.strftime('%m-%d-%Y') %>","<%= @assignment.end_date.strftime('%m-%d-%Y') %>","<%= raw @assignmentDefinition.description %>");
</script>
