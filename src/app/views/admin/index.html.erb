<!DOCTYPE html>
<h1>Admin Home</h1>

<h3>Administrators</h3>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Last online</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.last_sign_in_at %></td>      
      </tr>
    <% end %>
  </tbody>
</table>
<h3>Faculty</h3>
<% unless @faculty.empty? %>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Last online</th>
      </tr>
    </thead>
    <tbody id='faculty_table'>
      <% @faculty.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.last_sign_in_at %></td>      
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <p>There are no faculty registered at this time.</p>
<% end %>
<a class='btn' id='add_faculty_button'>Add faculty</a>
<form class="form-search" id='add_faculty'>
  <strong>Faculty e-mail:</strong>  
  <input type="text" class="input-medium search-query" id='faculty_email'>
  <p class="btn" id='submit_faculty'>Add</p>
</form>

<h3>Teaching Assistants</h3>
<% unless @tas.empty? %>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Last online</th>
        <th>Classes</th>
      </tr>
    </thead>
    <tbody>
      <% @tas.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.last_sign_in_at %></td>      
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  There are no teaching assistants registered at this time.
<% end %>

<h3>Students</h3>
<% unless @students.empty? %>
  <table class='table table-hover'>
    <thead>
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Last online</th>
      </tr>
    </thead>
    <tbody>
      <% @students.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.last_sign_in_at %></td>      
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  There are no students registered at this time.
<% end %>



<script type='text/javascript' runat='server'>
$(document).ready(function(){
  
  $('#add_faculty').toggle();
  $('#add_faculty_button').click(function(){
      $('#add_faculty').toggle('slow');
  });

  $('#submit_faculty').click(function(){
    var email = $('#faculty_email').attr('value');
    $.post('admin/confirm_faculty',
      { 'facultyemail': email },
        function(faculty){
            $('#faculty_table').append('<tr id=\'faculty-'+faculty.id + '\' style=\'display:none\'><td>'+faculty.id+'</td><td>'+faculty.email+'</td><td></td></tr>');
            $('#faculty-'+faculty.id).show('slow');
            $('#faculty_email').attr('value','');
          });
  });
});
</script>





