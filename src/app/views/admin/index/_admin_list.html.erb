<!DOCTYPE html>

<h3>Administrators</h3>
<table class='table table-hover'>
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Name</th>
      <th>Last online</th>
    </tr>
  </thead>
  <tbody>
    <% @admins.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.friendly_full_name %></td>
        <td><%= user.last_sign_in_at %></td>      
      </tr>
    <% end %>
  </tbody>
</table>
