<!DOCTYPE html>

<%= javascript_include_tag 'bootstrap-datepicker-1' %>

<span id="flash" style="display:none; padding:4px; background-color:#F70; color:#000"></span>

<h3>Pair students to review:&nbsp;<%= @assignment.name %></h3>

<%=render 'review_assignment_form' %>

<div>
  <h5>Previous Assignment:</h5>
  <select id='previous_selection'>
  <option value="-1">None</option>
  <% @review_assignments.each do |review_assignment| %>
    <option value="<%= review_assignment.id %>"><%= review_assignment.name %></option>
  <% end %>
  </select>
</div>

<p class='btn' onClick='reviewassignments.create.submitAssignment();'>Submit</p>
<%= link_to 'Cancel', '#', :class => 'btn' %>

<script type='text/javascript' >
  reviewassignments.create.pageLoad(<%= @assignment_id %>);
</script>

